<div class="row">

  <div class="col-sm-6">
    <ul>
      {{#each tasks}} {{#unless completed}}
      <li>
        {{task_name}}
        <button class="not-completed" data-id="{{id}}"> To do list </button>
      </li>
      {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="col-sm-6">
    {{#each tasks}} {{#if completed}}
    <li>
      {{task_name}}
      <button class="finished" data-id="{{id}}">Done!</button>
    </li>
    {{/if}} {{/each}}
  </div>
</div>

<h2>Add a Task!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Task</label>
    <input type="text" id="task" name="name">
  </div>

  <button type="submit" class="add-task">Submit</button>
</form>
