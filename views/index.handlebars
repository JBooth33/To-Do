<div class="jumbotron"> 
		<img src="/assets/images/notebook.png"> 
		<h1> To-Do List! </h1>
	</div>

<div class="row">

  <div class="col-sm-6">
    <h1>Tasks to Knock Out</h1>
      {{#each tasks}} {{#unless completed}}
      <li>
        {{task_name}}
        <button class="not-completed" data-id="{{id}}"> &#10004 </button>
        <button class="delete" data-id="{{id}}"> &#10060 </button>
      </li>
      {{/unless}} {{/each}}
  </div>

  <div class="col-sm-6">
    <h1>Tasks You've Completed</h1>
    {{#each tasks}} {{#if completed}}
    <li>
      {{task_name}}
      <button class="finished" data-id="{{id}}"> &#10060 </button>
    </li>
    {{/if}} {{/each}}
  </div>
</div>

<h2>Add a Task!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Task</label>
    <input type="text" id="task" name="name">
  </div>

  <button type="submit" class="add-task">Submit</button>
</form>
